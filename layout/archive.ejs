<%- partial('_partial/header') %>

<div class="vscode-container">
  <!-- 左侧资源管理器 -->
  <div class="sidebar-explorer">
    <div class="explorer-section">
      <div class="section-header">
        <i class="fas fa-clock"></i>
        <span>ARCHIVES</span>
      </div>
      <div class="section-content">
        <% let years = {}; %>
        <% site.posts.sort('date', -1).each(function(post){ %>
          <% let year = date(post.date, 'YYYY'); %>
          <% if (!years[year]) { years[year] = []; } %>
          <% years[year].push(post); %>
        <% }); %>
        
        <% Object.keys(years).sort((a, b) => b - a).forEach(function(year){ %>
          <div class="archive-year">
            <div class="folder">
              <i class="fas fa-folder"></i>
              <span><%= year %></span>
              <span class="count">(<%= years[year].length %>)</span>
            </div>
            <div class="archive-posts">
              <% years[year].forEach(function(post){ %>
                <div class="file <%- page.year === year && page.month === date(post.date, 'MM') ? 'active' : '' %>">
                  <i class="fas fa-file-alt"></i>
                  <a href="<%- url_for(post.path) %>">
                    <%= date(post.date, 'MM-DD') %> <%= post.title %>
                    <% if (post.sticky || post.top) { %>
                      <span class="sticky-indicator" title="<%= __('pinned_post') || 'Pinned Post' %>">
                        <i class="fas fa-thumbtack"></i>
                      </span>
                    <% } %>
                  </a>
                </div>
              <% }); %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

  <!-- 主要内容区域 -->
  <div class="editor-content">
    <div class="tab-bar">
      <div class="tab active">
        <i class="fas fa-archive"></i>
        <span>archives.md</span>
      </div>
    </div>
    
    <div class="content-area">
      <div class="archive-header">
        <h1>
          <i class="fas fa-archive"></i>
          Archives
        </h1>
        <span class="archive-count"><%= site.posts.length %> posts</span>
      </div>

      <div class="timeline-container">
        <% Object.keys(years).sort((a, b) => b - a).forEach(function(year){ %>
          <div class="timeline-year">
            <div class="year-header">
              <i class="fas fa-calendar-alt"></i>
              <%= year %>
              <span class="year-count">(<%= years[year].length %> posts)</span>
            </div>
            <div class="year-posts">
              <% years[year].forEach(function(post){ %>
                <div class="timeline-post">
                  <div class="post-date">
                    <i class="fas fa-clock"></i>
                    <%= date(post.date, 'MM-DD') %>
                  </div>
                  <div class="post-info">
                    <a href="<%- url_for(post.path) %>">
                      <%= post.title %>
                      <% if (post.sticky || post.top) { %>
                        <span class="sticky-indicator" title="<%= __('pinned_post') || 'Pinned Post' %>">
                          <i class="fas fa-thumbtack"></i>
                        </span>
                      <% } %>
                    </a>
                    <div class="post-meta">
                      <% if (post.categories && post.categories.length){ %>
                        <span class="category">
                          <i class="fas fa-folder"></i>
                          <%- list_categories(post.categories, {
                            show_count: false,
                            style: 'none',
                            separator: ', '
                          }) %>
                        </span>
                      <% } %>
                      <% if (post.tags && post.tags.length){ %>
                        <span class="tags">
                          <i class="fas fa-tags"></i>
                          <%- list_tags(post.tags, {
                            show_count: false,
                            style: 'none',
                            separator: ', '
                          }) %>
                        </span>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
